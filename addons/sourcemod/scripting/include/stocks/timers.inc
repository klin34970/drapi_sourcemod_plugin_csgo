/***********************************************************/
/********************** CLEAR TIMER ************************/
/***********************************************************/
stock void ClearTimer(Handle &timer)
{
    if (timer != INVALID_HANDLE)
    {
        KillTimer(timer);
        timer = INVALID_HANDLE;
    }     
}

/***********************************************************/
/********************* WARMUP TIMER ************************/
/***********************************************************/
stock bool isWarmup()
{
        return (GameRules_GetProp("m_bWarmupPeriod") == 1);
}